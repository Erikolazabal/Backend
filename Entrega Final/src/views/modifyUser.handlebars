<div class="container m-user">
<h1>Modificar usuario</h1>

<p class="info">Nombre: <span class="bold">{{{name}}}</span></p>
    <p class="info">Email: <span class="bold">{{{email}}}</span></p>
    <p class="info">Rol: <span class="bold">{{{role}}}</span></p>
    <p class="info">ID: <span class="bold" id="userId">{{{id}}}</span></p>
    <div class="btn-cont">
        <button id="deleteUser" class="password-reset-request-button">Eliminar</button>
        {{#if premium}}
            <button id="setUser" class="password-reset-request-button modi-quitar">Quitar premium</button>
        {{else}}
            <button id="setPremium" class="password-reset-request-button">Hacer premium</button>
        {{/if}}
    </div>
</div>

<script src="/js/modifyUser.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
