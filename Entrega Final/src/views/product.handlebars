<div class="navbar">
    <a href="http://localhost:3000/" class="logo">Tienda de Cajas</a>
    <div class="navbar-list">
        <a href="http://localhost:3000/profile">Perfil</a>
        <a href="http://localhost:3000/products">Productos</a>
        <a href="http://localhost:3000/carts/{{cart}}">Carrito</a>
        
        <a href="http://localhost:3000/users/logout">Cerrar sesion</a>
    </div>
</div>

<div class="product-details-container">
    {{#if product}}
        <div class="product-details-card">
            <img class="product-image" src="{{product.thumbnail}}" alt="product image"/>
            <h2 class="product-title">{{product.title}}</h2>
            <p class="product-price">${{product.price}}</p>
            <p class="product-description">Descripción: {{product.description}}</p>
            <p>Código: {{product.code}}</p>
            <p>Stock: {{product.stock}}</p>
            <p>Categoría: {{product.category}}</p>
            <p>ID: <span id="prodId">{{product._id}}</span></p>
            <div class="btn-flex">
                <button id="addToCart" class="add-to-cart-button">Agregar al carrito</button>
                    {{#if canDelete}}
                <button id="deleteProduct" class="delete-product-button">Eliminar producto</button>
                    {{/if}}
            </div>
            
        </div>
    {{else}}
        <h2>El producto con el ID {{product.id}} no existe</h2>
    {{/if}}
</div>
<script type="module" src="/js/product.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
